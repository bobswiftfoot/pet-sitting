<container class="container-fluid">
  <!-- Button trigger modal -->
  <button id="post-modal" type="button" class="btn btn-dark mx-auto" data-bs-toggle="modal"
    data-bs-target="#newRequestModal">
    Post!
  </button>

  <!-- Modal -->
  <div class="modal fade" id="newRequestModal" tabindex="-1" aria-labelledby="newRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form class="justify-content-start" id='uploadForm'>
          <div class="modal-header">
            <h5 class="modal-title" id="newRequestModalLabel">Create a new post!</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <h2><label for="post-title"></label>Title</label></h2>
            <div class="input-group mb-3">
              <input type="text" id="post-title" name="post-title" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
            </div>
            {{!-- <input type="text" id="post-title" name="post-title"></br> --}}
            <h2><label for="post-body">Content</label></h2>
            <div class="input-group">
              <textarea id="post-body" name="post-body" class="form-control text-muted"
                aria-label="With textarea">Post Here</textarea>
            </div>
            {{!-- <input id="post-body" name="post-body" /></br> --}}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-dark">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div></br>

