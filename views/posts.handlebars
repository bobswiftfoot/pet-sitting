<div class="container-fluid">
    <div id="forms" class="row justify-content-around px-5">
        <div id="sign-in" class="col-md-4 mb-3">
            <form class="new-post-form">
                <h1 class="text-center">Create New Review Post</h1>
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title">
    </div>
    <div>
      <label for="post-body">Contents</label>
      <input id="post-body" name="post-body" />
    </div>
    <button type="submit" class="btn">Create</button>
    </form>
    </div>
    </div>
    </div>

{{#if posts.length}}
<div class="container-fluid">
    <div id="forms" class="row justify-content-around px-5">
        <div id="sign-in" class="col-md-4 mb-3">
            <form class="new-post-form">
                <h2 class="text-center">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/edit-post/{{post.id}}" class="edit-link">Edit Review Post</a>
      </li>
      {{/each}}
  </ol>
</form>
    </div>
    </div>
    </div>
    {{/if}}


<script src="/javascript/add-post.js"></script>