    <!-- Button trigger modal -->
  <button id="comment-modal" type="button" class="btn btn-dark mx-auto" data-bs-toggle="modal"
    data-bs-target="#commentRequestModal">
    Comment!
  </button>

  <!-- Modal -->
  <div class="modal fade" id="commentRequestModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form class="justify-content-start" id='commentForm'>
          <div class="modal-header">
            <h5 class="modal-title" id="commentRequestModalLabel">Upload a comment!</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <h2><label for="comment-body">Comment</label></h2>
            <div class="input-group">
              <textarea id="comment-body" name="comment-body" class="form-control" placeholder="Comment Here"
                aria-label="With textarea"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-dark">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div></br>

  <div id="learn-more" class="card mx-auto" style="max-width: 95%;">
    <h2 id="calendar-header" class="text-center">Comments</h2>
    {{#if post.comments.length}}
    {{#each post.comments as |comment|}}

    <div class="card mx-auto mt-1" style="width: 95%;">
      <div id="card-body" class="card-body">
        {{> comments comment}}
      </div>
    </div></br>

    {{/each}}
    {{/if}}


