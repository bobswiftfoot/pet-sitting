<conatiner class="container-fluid">
    <!-- Button trigger modal -->
    <button id="request-modal" type="button" class="btn btn-dark mx-auto" data-bs-toggle="modal"
        data-bs-target="#exampleModal">
        Create a new request!
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Owner's Name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2>Pet's Name</h2>
                    <input class="form-control" type="text" placeholder="Pet's Name"
                        aria-label="default input example"></br>
                    <h2>Care Type</h2>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">Walk</option>
                        <option value="2">Sitting</option>
                        <option value="3">Other</option>
                    </select></br>
                    <h2>Date:</h2>
                    <div class="input-group date">
                        <input type="text" class="form-control"><span class="input-group-addon"><i
                                class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div></br>

    <!-- Request for each pet -->

    <div id="learn-more" class="card mb-3 mx-auto" style="max-width: 95%;">
        {{#each caredays as |careday| }}

        <div class="row g-0">
            <div class="col-md-2 mx-0">
                <div class="card-body">
                    <p class="text-center card-text">Owner: {{careday.pet.user.user_name}}</p>
                </div>
            </div>
            <div class="col-md-2 mx-0">
                <div class="card-body">
                    <p class="text-center card-text">{{careday.day_of_care}}</p>
                </div>
            </div>
            <div class="col-md-2 mx-0">
                <div class="card-body">
                    <p class="text-center card-text">{{careday.type_of_care}}</p>
                </div>
            </div>
            <div class="col-md-2 mx-0">
                <div class="card-body">
                    <p class="text-center card-text">Pet Name: {{careday.pet.pet_name}}</p>
                </div>
            </div>
            <div class="col-md-2 mx-0">
                {{#if careday.sitter}}
                <div class="card-body">
                    <p class="text-center card-text">{{careday.sitter.user_name}}</p>
                </div>
                {{else}}
                <div class="card-body">
                    <p class="text-center card-text">Available</p>
                </div>
                {{/if}}
            </div>
            <div class="col-md-2">
                {{#unless careday.sitter}}
                <div class="card-body d-flex justify-content-center">
                    <button class="btn btn-outline-light me-2" type="button">Volunteer!</button>
                </div>
                {{/unless}}
            </div>
        </div>
        {{/each}}

    </div>

    </container>